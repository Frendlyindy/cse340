<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

    <% if (message) { %>
      <p class="notice"><%= message %></p>
      <% } %>

      <h2>Confirm Deletion - The delete is permanent.</h2>

      <form action="/inv/sendDelete" method="post" class="new-car-form">
        <label for="classification_id">Classification</label>
          <%-dropdown%>
        <label for="make">Make</label>
        <input type="text" name="make" id="make" placeholder="eg. GMC, Honda, Kia" required value="<%= locals.inv_make %>" readonly> 
        <label for="model">Model</label>
        <input type="text" name="model" id="model" placeholder="eg. Sierra, Civic, Soul" required value="<%= locals.inv_model %>" readonly>
        <label for="description">Description</label>
        <textarea name="description" id="description" cols="30" rows="10" readonly><%= locals.inv_description %></textarea>
        <label for="imgPath">Image Path</label>
        <input type="text" name="imgPath" id="imgPath" value="/images/vehicles/no-image.png" readonly required value="<%= locals.inv_imgPath %>">
        <label for="thumb">Thumbnail Path</label>
        <input type="text" name="thumb" id="thumb" value="/images/vehicles/no-image-tn.png" readonly required value="<%= locals.inv_thumb %>">
        <label for="price">Price</label>
        <input type="number" name="price" id="price" placeholder="eg. $20,000" readonly required value="<%= locals.inv_price %>">
        <label for="year">Year</label>
        <input type="text" name="year" id="year" placeholder="eg. 1998" readonly required value="<%= locals.inv_year %>" pattern="(?:(?:19|20)[0-9]{2})">
        <label for="miles">Miles</label>
        <input type="number" name="miles" id="miles" placeholder="eg. 120000" readonly required value="<%= locals.inv_miles %>">
        <label for="color">Color</label>
        <input type="text" name="color" id="color" placeholder="eg Candy Apple Red" readonly required value="<%= locals.inv_color %>"><br>
        <button type="submit">Delete Vehicle</button>
        <input type="hidden" name="inv_id"
<% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
<% } %>>
      </form>