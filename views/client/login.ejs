<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

    <% if (message) { %>
      <p class="notice"><%= message %></p>
      <% } %>

      
      <form id="loginForm" action="/client/login" method="post">
        <label for="email">User Email</label>
    <input type="email" name="client_email" id="client_email">
    <label for="clientPassword">Password:</label> 
    <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span> 
    <input type="password" name="client_password" id="client_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
    <button type="submit">Submit</button>
</form>
<p>No account? <a href="/client/registration">Sign-Up</a></p>